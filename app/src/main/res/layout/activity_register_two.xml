<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.RegisterActivityTwo">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFFFF">

        <!-- /////////////// Text ////////////// -->

        <TextView
            android:id="@+id/register_first_name_text"
            android:layout_width="@dimen/text_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:text="@string/register_first_name"
            android:layout_margin="@dimen/login_register_margin"/>

        <TextView
            android:id="@+id/register_second_name_text"
            android:layout_width="@dimen/text_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintTop_toBottomOf="@id/register_first_name_text"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:text="@string/register_second_name"
            android:layout_margin="@dimen/login_register_margin"/>

        <TextView
            android:id="@+id/register_birth_date_text"
            android:layout_width="@dimen/text_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintTop_toBottomOf="@id/register_second_name_text"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:text="@string/register_birth_date"
            android:layout_margin="@dimen/login_register_margin"/>

        <TextView
            android:id="@+id/register_place_of_birth_text"
            android:layout_width="@dimen/text_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintTop_toBottomOf="@id/register_birth_date_text"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:text="@string/register_place_of_birth"
            android:layout_margin="@dimen/login_register_margin"/>

        <TextView
            android:id="@+id/register_personal_identity_number_text"
            android:layout_width="@dimen/text_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintTop_toBottomOf="@id/register_place_of_birth_text"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:text="@string/register_personal_identity_number"
            android:layout_margin="@dimen/login_register_margin"/>

        <TextView
            android:id="@+id/register_sex_text"
            android:layout_width="@dimen/text_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintTop_toBottomOf="@id/register_personal_identity_number_text"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:text="@string/register_sex"
            android:layout_margin="@dimen/login_register_margin"/>

        <TextView
            android:id="@+id/register_priority_text"
            android:layout_width="@dimen/text_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintTop_toBottomOf="@id/register_sex_text"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:text="@string/register_priority"
            android:layout_margin="@dimen/login_register_margin"/>

        <!-- /////////////// Fields ////////////// -->

        <EditText
            android:id="@+id/register_first_name_field"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintLeft_toRightOf="@id/register_first_name_text"
            android:minEms="5"
            android:inputType="textPersonName"
            android:layout_margin="@dimen/login_register_margin"
            android:background="@color/field_color"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/register_second_name_field"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintLeft_toRightOf="@id/register_second_name_text"
            app:layout_constraintTop_toBottomOf="@+id/register_first_name_text"
            android:minEms="5"
            android:inputType="textPersonName"
            android:layout_margin="@dimen/login_register_margin"
            android:background="@color/field_color"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/register_birth_date_field"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintLeft_toRightOf="@id/register_birth_date_text"
            app:layout_constraintTop_toBottomOf="@+id/register_second_name_text"
            android:minEms="5"
            android:layout_margin="@dimen/login_register_margin"
            android:background="@color/field_color"
            android:textColor="@color/black"

            android:focusable="false"
            android:onClick="openCalendar"/>

        <EditText
            android:id="@+id/register_place_of_birth_field"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintLeft_toRightOf="@id/register_place_of_birth_text"
            app:layout_constraintTop_toBottomOf="@+id/register_birth_date_text"
            android:minEms="5"
            android:inputType="textPersonName"
            android:layout_margin="@dimen/login_register_margin"
            android:background="@color/field_color"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/register_personal_identity_number_field"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintLeft_toRightOf="@id/register_personal_identity_number_text"
            app:layout_constraintTop_toBottomOf="@+id/register_place_of_birth_text"
            android:minEms="5"
            android:inputType="number"
            android:layout_margin="@dimen/login_register_margin"
            android:background="@color/field_color"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/register_sex_field"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintLeft_toRightOf="@id/register_sex_text"
            app:layout_constraintTop_toBottomOf="@+id/register_personal_identity_number_text"
            android:layout_margin="@dimen/login_register_margin"
            android:focusable="false"
            android:drawSelectorOnTop="true"
            android:entries="@array/spinner_sex"
            android:background="@color/field_color"
            android:theme="@style/Spinner"/>

        <Spinner
            android:id="@+id/register_priority_field"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            app:layout_constraintLeft_toRightOf="@id/register_priority_text"
            app:layout_constraintTop_toBottomOf="@+id/register_sex_text"
            android:layout_margin="@dimen/login_register_margin"
            android:focusable="false"
            android:drawSelectorOnTop="true"
            android:entries="@array/spinner_priority"
            android:background="@color/field_color"
            android:theme="@style/Spinner"/>

        <!--//////////////////////Wrong Field Data/////////////////////////////////-->

        <TextView
            android:id="@+id/register_wrong_first_name"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/register_first_name_field"
            app:layout_constraintLeft_toRightOf="@id/register_first_name_text"
            android:layout_marginLeft="@dimen/login_register_margin"
            android:text="@string/register_wrong"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/register_wrong_second_name"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/register_second_name_field"
            app:layout_constraintLeft_toRightOf="@id/register_second_name_text"
            android:layout_marginLeft="@dimen/login_register_margin"
            android:text="@string/register_wrong"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/register_wrong_birth_date"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/register_birth_date_field"
            app:layout_constraintLeft_toRightOf="@id/register_birth_date_text"
            android:layout_marginLeft="@dimen/login_register_margin"
            android:text="@string/register_wrong"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/register_wrong_place_of_birth"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/register_place_of_birth_field"
            app:layout_constraintLeft_toRightOf="@id/register_place_of_birth_text"
            android:layout_marginLeft="@dimen/login_register_margin"
            android:text="@string/register_wrong"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/register_wrong_personal_identity_number"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/register_personal_identity_number_field"
            app:layout_constraintLeft_toRightOf="@id/register_personal_identity_number_text"
            android:layout_marginLeft="@dimen/login_register_margin"
            android:text="@string/register_wrong"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/register_wrong_sex"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/register_sex_field"
            app:layout_constraintLeft_toRightOf="@id/register_sex_text"
            android:layout_marginLeft="@dimen/login_register_margin"
            android:text="@string/register_wrong"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/register_wrong_priority"
            android:layout_width="@dimen/field_register_width"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/register_priority_field"
            app:layout_constraintLeft_toRightOf="@id/register_priority_text"
            android:layout_marginLeft="@dimen/login_register_margin"
            android:text="@string/register_wrong"
            android:visibility="invisible"/>

        <!--////////////////////////// Button //////////////////////-->

        <Button
            android:id="@+id/register_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_register"
            app:layout_constraintTop_toBottomOf="@id/register_priority_text"
            android:layout_marginTop="16dp"
            android:onClick="doRegister"/>

        <!--////////////////////////// Pointer Information //////////////////////-->

        <TextView
            android:id="@+id/register_field_required"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_register_height"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/register_register"
            android:text="@string/require_fields"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>